<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="ZfrOAuth2\Server\Doctrine\Entity\Client"
            repository-class="ZfrOAuth2\Server\Doctrine\Repository\ClientRepository"
            table="oauth_clients">
        <id name="id" type="string" length="60">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="ZfrOAuth2\Server\Doctrine\Id\ClientIdGenerator"/>
        </id>

        <field name="secret" type="string" length="60"/>
        <field name="redirectUris" column="redirect_uris" type="json_array"/>
    </entity>
</doctrine-mapping>
